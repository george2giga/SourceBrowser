<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@(ViewBag.Title != null ? ViewBag.Title + " | Source Browser" : "Source Browser")</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>

    <body class="metro">
        <header class="bg-dark" data-load="header.html">
            <div class="navigation-bar dark">
                <div class="navigation-bar-content container">
                    @* Left aligned items: *@
                    <a href="@Url.Action("Index","Home")" class="element title-element">
                        <div class="logo"></div>
                        <div class="title">SOURCE BROWSER <sup>Git</sup></div>
                    </a>
                    <span class="element-divider"></span>

                    <a class="element1 pull-menu" href="#"></a>
                    <ul class="element-menu">
                        <li>
                            @Html.ActionLink("Browse", "", "Browse")
                        </li>
                        <li>
                            @Html.ActionLink("Upload", "", "Upload")
                        </li>
                    </ul>

                    @* Right aligned items: *@
                    <div class="element-menu place-right input-element">
                    </div>


                </div>
            </div>
        </header>
    
        @RenderBody()
    
        <div class="container body-content">
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Fork me on <a href="https://github.com/george2giga/SourceBrowser">Github</a></p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/search")
        @*Scripts.Render("~/bundles/sourcebrowser")*@
        @RenderSection("scripts", required: false)
    </body>
</html>
